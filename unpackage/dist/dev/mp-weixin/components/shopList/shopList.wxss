.listContainer {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
/* 解决最后一行只有一个元素的时候不能靠左布局 */
}
.listContainer:after {
  content: '';
  width: 345rpx;
  height: 0;
}
.listContainer .listItem {
  width: 345rpx;
  display: flex;
  flex-direction: column;
}
.listContainer .listItem image {
  width: 345rpx;
  height: 345rpx;
}
.listContainer .listItem ._p {
  white-space: pre-wrap;
  font-size: 28rpx;
  line-height: 50rpx;
  text-align: left;
}

